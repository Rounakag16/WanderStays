<style>
    .search-btn {
        background-color: #fe424d;
        color: #fff;
        border-radius: 25px;
        padding: 0 1rem;
    }

    .search-btn:hover {
        background-color: #fe424d;
        color: #fff;
    }

    .search-btn:active {
        background-color: #fff;
        color: #fe424d;
    }

    .search-btn i {
        display: inline;
        margin-right: 0.5rem;
    }

    .search-input {
        border-radius: 25px;
        padding: 0.5rem 3rem;
        font-size: 1rem;
    }
</style>

<nav class="navbar navbar-expand-md navbar-light bg-body-light border-bottom sticky-top" id="nav-menu">
    <div class="container-fluid">
        <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass" style="color: #fe424d;"></i></a>
        <button class="navbar-toggler" id="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarNavAltMarkup">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link" href="/listings">Explore</a>
            </div>
            <div class="navbar-nav ms-auto" id="search">
                <form class="d-flex" action="/listings/search" method="get">
                    <input class="form-control me-2 search-input" type="search" name="prompt"
                        placeholder="Search destinations">
                    <button class="btn search-btn" type="submit"><i
                            class="fa-solid fa-magnifying-glass"></i>Search</button>
                </form>
            </div>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/listings/new">WanderStay your home</a>
                <% if(!curUser){ %>
                    <a class="nav-link" href="/signup"><b>Sign up</b></a>
                    <a class="nav-link" href="/login"><b>Login</b></a>
                    <% } else{ %>
                        <a class="nav-link" href="/logout"><b>Logout</b></a>
                        <% } %>
            </div>
        </div>
    </div>
</nav>
