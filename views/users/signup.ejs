<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">SignUp</h1>
        <div class="col-6 offset-3">
            <form method="post" action="/signup" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" placeholder="Username" class="form-control" type="text"
                        required>
                    <div class="invalid-feedback">
                        Username should be valid.
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" id="email" placeholder="Email" class="form-control" type="email" required>
                    <div class="invalid-feedback">
                        Email should be valid.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="password" placeholder="Password" class="form-control" type="password"
                        required>
                    <div class="invalid-feedback">
                        Password should be valid.
                    </div>
                </div>
                <button class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>